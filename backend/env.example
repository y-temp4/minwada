# Application Environment (development, staging, production)
APP_ENV=development

# Database
DATABASE_URL=postgresql://reddit_user:reddit_password@localhost:5433/reddit_db
DATABASE_URL=postgresql://reddit_user:reddit_password@localhost:5433/reddit_db_test
POSTGRES_DB=reddit_db
POSTGRES_USER=reddit_user
POSTGRES_PASSWORD=reddit_password
POSTGRES_PORT=5432

# pgAdmin
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=8080

# Redis
REDIS_PORT=6379

# JWT Settings
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-at-least-32-characters-long
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Email Verification Settings
EMAIL_VERIFICATION_TOKEN_EXPIRES_IN=24h
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME="Reddit Sample"

# Mailhog Settings (Development)
MAILHOG_HOST=mailhog
MAILHOG_PORT=1025
MAILHOG_UI_PORT=8025

# Mailgun Settings (Staging/Production)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# Frontend URL for email verification
FRONTEND_URL=http://localhost:3000
EMAIL_VERIFICATION_PATH=/verify-email

# OAuth Settings
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
CORS_ORIGIN=http://localhost:3000

# OpenAPI
OPENAPI_TITLE=RedditClone_API
OPENAPI_VERSION=1.0.0
OPENAPI_URL=/api/openapi.json

# Logging
RUST_LOG=debug
